<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style
        x:Key="GameMenuButton"
        BasedOn="{StaticResource {x:Type ButtonEx}}"
        TargetType="ButtonEx">
        <Setter Property="Margin" Value="10" />
        <Setter Property="Padding" Value="15,15,15,15" />
    </Style>

    <Style x:Key="GameMenuBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Width" Value="400" />
        <Setter Property="Background" Value="{DynamicResource PS5BasicGradient}" />
    </Style>

    <Style
        x:Key="GameMenuHeaderText"
        BasedOn="{StaticResource TextBlockBaseStyle}"
        TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Padding" Value="15,15,15,15" />
        <Setter Property="Background" Value="#AA000000" />
    </Style>

    <DataTemplate x:Key="GameMenuHeaderTemplate">
        <TextBlock Style="{DynamicResource GameMenuHeaderText}" Text="{Binding Name}" />
    </DataTemplate>

    <DataTemplate x:Key="GameMenuPlayButtonTemplate">
        <StackPanel Orientation="Horizontal">
            <TextBlock
                x:Name="PlayItemIcon"
                Width="25"
                Margin="0,0,10,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="{DynamicResource FontIcoFont}"
                FontSize="24"
                Text="&#xec74;" />
            <TextBlock
                x:Name="PlayItemText"
                VerticalAlignment="Center"
                Text="{Binding}" />
        </StackPanel>
        <DataTemplate.Triggers>
            <DataTrigger Binding="{PluginSettings Plugin=BackToGame, Path=IsRunning}" Value="True">
                <Setter TargetName="PlayItemIcon" Property="Text" Value="&#xea32;" />
                <Setter TargetName="PlayItemText" Property="Text" Value="{DynamicResource LOCBackToGame}" />
            </DataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

