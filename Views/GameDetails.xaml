                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=ScreenshotVisualiserList, Path=IsKeyboardFocusWithin}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                        <DataTrigger
                                                Binding="{Binding Source={StaticResource FullscreenMediaScreenshots}}"
                                                Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                        <DataTrigger
                                                Binding="{Binding Source={StaticResource FullscreenVisualiserScreenshots}}"
                                                Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
