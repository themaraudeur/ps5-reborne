                        x:Name="PART_ViewHost"
                        d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameIntance}"
                        d:DesignHeight="{StaticResource DesignHeight}"
                        d:DesignWidth="{StaticResource DesignWidth}"
                        Background="Transparent"
                        KeyboardNavigation.ControlTabNavigation="Cycle"
                        KeyboardNavigation.DirectionalNavigation="Contained"
                        KeyboardNavigation.TabNavigation="Cycle">
                        <Grid x:Name="InputLogic">
                            <ContentControl x:Name="ThemeOptions_Command" Focusable="False" />
                        </Grid>
                        <Grid x:Name="TrailerMainGrid">
                            <ContentControl
                                x:Name="ExtraMetadataLoader_VideoLoaderControl_NoControls_Sound"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Focusable="False" />
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Resources>
                                        <Storyboard x:Key="FadeOn">
                                            <DoubleAnimation
                                                FillBehavior="HoldEnd"
                                                Storyboard.TargetProperty="Opacity"
                                                From="0"
                                                To="1"
                                                Duration="0:0:0.4" />
                                        </Storyboard>
                                        <Storyboard x:Key="FadeOff">
                                            <DoubleAnimation
                                                FillBehavior="HoldEnd"
                                                Storyboard.TargetProperty="Opacity"
                                                From="1"
                                                To="0"
                                                Duration="0:0:0.4" />
                                        </Storyboard>
                                    </Style.Resources>
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=PlayTrailer, Path=IsChecked}"
                                                        Value="True" />
                                                <Condition
                                                        Binding="{Binding ElementName=PlayTrailer, Path=IsKeyboardFocusWithin}"
                                                        Value="True" />
                                            </MultiDataTrigger.Conditions>
                                            <MultiDataTrigger.Setters>
                                                <Setter Property="Visibility" Value="Visible" />
                                            </MultiDataTrigger.Setters>
                                            <MultiDataTrigger.EnterActions>
                                                <BeginStoryboard Storyboard="{StaticResource FadeOn}" />
                                            </MultiDataTrigger.EnterActions>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>

                        <Grid x:Name="DarkeningScreenshot" Background="Black">
