                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=PresetName, Path=Text}" Value="Media">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Image x:Name="Filter" Opacity="0.7" RenderOptions.BitmapScalingMode="Fant" RenderTransformOrigin="0.5,0.5"
                               Source="{ThemeFileBinding Name, PathFormat='Icons/Filters/{0}.png'}" Stretch="Uniform" Height="30" MaxWidth="200"
                               HorizontalAlignment="Center" VerticalAlignment="Center" >
                            
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Margin" Value="20,5,20,5"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=Filter, Path=Source}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </Grid>
                    

