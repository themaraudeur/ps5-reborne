                                <BitmapCache EnableClearType="False" 
                                                 RenderAtScale="1" 
                                                 SnapsToDevicePixels="False"/>
                            </Border.CacheMode>
                        </Border>
                        <Border x:Name="FlashBorder" Opacity="1" Margin="5" Style="{DynamicResource PS5Cover}"  Visibility="Hidden" Tag="False">
                            <Border.CacheMode>
                                <BitmapCache EnableClearType="False" 
                                                 RenderAtScale="1" 
                                                 SnapsToDevicePixels="False"/>
                            </Border.CacheMode>
                        </Border>
                        <TextBlock Style="{DynamicResource TextBlockBaseStyle}" FontSize="38"
                                   x:Name="TextContent" FontFamily="Segoe UI Light">
                            <Grid x:Name="Margin" Margin="20,5,20,5">
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Visibility="Hidden"/>
                                <StackPanel>
                                    <TextBlock x:Name="PresetName" Text="{Binding Name}" HorizontalAlignment="Center">
                                        
                                    </TextBlock>
                                </StackPanel>
                                
                            </Grid>
                        </TextBlock>
                        <TextBlock x:Name="MediaCustom" Text="{DynamicResource CustomMedia}" Margin="20,5,20,5" Foreground="#FFEBEBEB" FontSize="38" FontFamily="Segoe UI Light">
