    <!-- Media Filtering Template -->
    <DataTemplate x:Key="MediaItemTemplate">
        <ContentPresenter>
            <ContentPresenter.Style>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <!-- Masque les jeux dans Media -->
